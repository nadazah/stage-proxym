{
	"name": "web-app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://gitlab.proxym-group.net/trainees-platform/web-app.git"
	},
	"scripts": {
		"start": "pnpm start:dev",
		"start:dev": "env-cmd -f .env.development vite",
		"start:prod": "env-cmd -f .env.production vite",
		"build:dev": "env-cmd -f .env.development vite build",
		"build:prod": "env-cmd -f .env.production vite build",
		"preview": "vite preview",
		"prettier:write": "pnpm prettier --write **/*.{js,jsx,ts,tsx,json}",
		"lint": "eslint . --ext .js,.ts,.tsx  --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "pnpm lint --fix",
		"storybook": "set NODE_OPTIONS=--openssl-legacy-provider && start-storybook -p 6006",
		"build-storybook": "storybook build",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"coverage": "vitest run --coverage",
		"prepare": "npx husky install",
		"commit": "npx git-cz",
		"gql_generate": "env-cmd -f .env.development graphql-codegen --config ./src/config/codegen_config.ts  --watch"
	},
	"dependencies": {
		"@apollo/client": "^3.7.17",
		"@chakra-ui/icons": "^2.0.19",
		"@chakra-ui/react": "^2.8.0",
		"@emotion/cache": "^11.11.0",
		"@emotion/react": "^11.11.0",
		"@emotion/styled": "^11.11.0",
		"@reduxjs/toolkit": "^1.9.5",
		"@tanstack/react-table": "^8.9.3",
		"env-cmd": "^10.1.0",
		"framer-motion": "^10.12.16",
		"graphql": "^16.6.0",
		"i18next": "^22.5.0",
		"ramda": "^0.29.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^12.3.1",
		"react-redux": "^8.0.5",
		"react-router-dom": "^6.11.2",
		"stylis": "^4.2.0",
		"stylis-plugin-rtl": "^2.1.1"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.6.3",
		"@graphql-codegen/cli": "^4.0.0",
		"@graphql-codegen/client-preset": "^4.0.0",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@storybook/addon-essentials": "^7.0.17",
		"@storybook/addon-links": "^7.0.17",
		"@storybook/builder-vite": "^7.0.17",
		"@storybook/react": "^7.0.17",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/js-cookie": "^3.0.3",
		"@types/node": "^20.2.4",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vitejs/plugin-react-swc": "^3.3.2",
		"eslint": "^8.38.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.3",
		"js-cookie": "^3.0.5",
		"jsdom": "^22.0.0",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"storybook": "^7.0.17",
		"storybook-dark-mode": "^3.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2",
		"vite": "^4.4.4",
		"vite-plugin-svgr": "^3.2.0",
		"vitest": "^0.31.1"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog-emoji"
		}
	}
}
